
/*引用公用wxss*/
@import '../../common/css/common.wxss'

page {
    background: #f0f0f0;
}
.container {
    margin: 0;
    padding: 0;
}

.container .banner {
    width: 750rpx;
    height: 260rpx;
}
.container .banner .banner-detail {
    width: 710rpx;
    height: 220rpx;
}

/*scroll-view部分*/
.container .list {
    width: 750rpx;
}
.container .list .list-content {
    position: relative;
    width: 750rpx;
    flex-wrap: wrap;
    padding-left: 20rpx;
}
.container .list .list-item {
    position: absolute;
    width: 345rpx;
    height: auto;
    top: 0;
    left: 0;
    background: #fff;
    border-radius: 5rpx;
}
.container .list .list-item.noMargin {
    margin-right: 0;
}
.container .list .list-item .ware-img {
    width: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    border-radius: 5rpx 5rpx 0 0;
}

.ware-money-part {
    width: 305rpx;
    height: 150rpx;
}
.container .list .list-item .ware-name {
    width: 100%;
    font-size: 26rpx;
    color: #1C1717;
    text-align: left;
}
.container .list .list-item .money-group {
    width: 100%;
}
.container .list .list-item .money-group .sale-money {
    font-size: 30rpx;
    color: #29C394;
    text-align: left;
    margin-top: 8rpx;
    margin-right: 10rpx;
}
.container .list .list-item .money-group .origin-price {
    position: relative;
    font-size: 20rpx;
    color: #999;
    text-align: left;
    margin-top: 8rpx;
}
.container .list .list-item .money-group .origin-price .line {
    position: absolute;
    width: 100%;
    height: 1.5rpx;
    background: #999;
    left: 0;
    top: 50%;
}

.container .list .list-item .seller-info {
    width: 305rpx;
    height: 95rpx;
    border-top: 1rpx solid #e1e1e1;
    font-size: 24rpx;
    color: #1C1717;
    text-align: left;
    margin-top: 1rpx solid #E1E1E1;
}
.container .list .list-item .seller-info .seller-avator {
    width: 42rpx;
    height: 42rpx;
}
.container .list .list-item .seller-info .seller-avator image {
    border-radius: 50%;
}
.container .list .list-item .seller-info .seller-name {
    padding: 0 15rpx;
    border-right: 1rpx solid #000;
}
.container .list .list-item .seller-info .seller-place {
    padding: 0 15rpx;
    border-radius: 0 0 5rpx 5rpx;
}
.container .list .loading {
    position: absolute;
    left: 0;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 24rpx;
}


/*底部吸底按钮部分*/
.container .btn-group {
    position: fixed;
    width: 750rpx;
    height: 85rpx;
    left: 0;
    bottom: 50rpx;
}
.container .btn-group .btn-body {
    width: 500rpx;
    height: 85rpx;
    background: #000;
    color: #fff;
    font-size: 30rpx;
    border-radius: 4rpx;
}
.container .btn-group .btn-body .sell {
    width: 249rpx;
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    color: #29C394;
}
.container .btn-group .btn-body .line {
    width: 2rpx;
    height: 26rpx;
    background: #fff;
}
.container .btn-group .btn-body .manage {
    width: 249rpx;
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
}

/*急速发布弹窗部分*/
.publish {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.6);
}
.publish .pub-body {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 750rpx;
    height: 340rpx;
}
.publish .pub-body .btn {
    width: 710rpx;
    height: 135rpx;
    background: #fff;
    border-radius: 4rpx;
    margin-bottom: 20rpx;
}
.publish .pub-body .btn .title {
    font-size: 38rpx;
    font-weight: 500;
    color: #000;
}
.publish .pub-body .btn .sub-title {
    font-size: 26rpx;
    color: #000;
}